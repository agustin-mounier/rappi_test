<resources>
    <style name="Tmdb"/>
    <style name="Tmdb.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ice_blue</item>
    </style>
    <style name="Tmdb.Genre">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/dark</item>
    </style>
    <style name="Tmdb.CategoryRadioButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/ice_blue</item>
        <item name="android:background">@drawable/tmdb_radio_button_background</item>
    </style>
    <style name="Tmdb.Detail">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Tmdb.Detail.Title">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Tmdb.Detail.Year">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Tmdb.Detail.Subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Tmdb.Detail.OverviewText">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
